/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 200rpx 0;
  box-sizing: border-box;
} 


page{
  background-color: #eeeef3;
  color: #333;
}
.head-info{
  height: 48px;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 8px;
  background-color: #fff;
  box-shadow: 0 1px 2px rgba(0,0,0,.3);
  display: flex;
  align-items: center;
  border-radius: 2px;
}


.opt-content{
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 8px;
  background-color: #fff;
  box-shadow: 0 1px 2px rgba(0,0,0,.3);
  border-radius: 2px;
  margin-bottom: 10px;
}


.up-info-title{
  height: 30px;
  line-height: 30px;
  margin-left: 12px;
  padding-top: 4px;
}
.up-info-title>text:first-of-type{
  color: red;
}


.picker-part{
  border: 1px solid #d4d4d4;
  height: 32px;
  margin-left: 12px;
  margin-right: 12px;
  border-radius: 2px;
  line-height: 32px;
  padding-left: 8px;
  overflow: hidden;
}

.picker-part>text{
  margin-right: 12px;
}

button:active{
  position: relative;
  top: 1px;
}

.info-btn{
  color: #07c062 !important;
  border-color: #07c062 !important;
}

.del-btn{
  color: #ff6060 !important;
  border-color: #ff6060 !important;
}
